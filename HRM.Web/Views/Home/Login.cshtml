@model HRM.Web.Models.LoginVM

@{
    Layout = "_LoginLayout";    
}

<div class="splash-container">
    <div class="card ">
        <div class="card-body">
            <div class="card-header text-center"><h2>Login</h2><span class="splash-description">Please enter your user information.</span></div>
            <form asp-controller="Home" asp-action="LoginUser" method="post">
                <div class="form-group">
                    <input asp-for="EmailAddress"  class="form-control form-control-lg" placeholder="Email" >
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="Password">
                </div>

                <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>
            </form>
        </div>

    </div>
</div>